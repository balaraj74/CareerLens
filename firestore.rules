rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users: can read/write their own doc, admins can read all.
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false; // or allow for user + admin with audit
    }

    // Roles: public read, admin write
    match /roles/{roleId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }

    // Assessments: user owns
    match /assessments/{id} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if resource.data.userId == request.auth.uid || request.auth.token.admin == true;
      allow update, delete: if false; // keep immutable or allow admin
    }

    // Plans: user owns
    match /plans/{id} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if resource.data.userId == request.auth.uid || request.auth.token.admin == true;
      allow update: if resource.data.userId == request.auth.uid;
    }

    // Prompts: admin only write, read by backend functions
    match /prompts/{id} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }

    // Admin configs: only admin
    match /admin/{doc} {
      allow read, write: if request.auth.token.admin == true;
    }

    // Default: deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
