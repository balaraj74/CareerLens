rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Career Intelligence - public read, system write
    match /careerIntelligence/{docId} {
      allow read: if true;
      allow write: if false; // Client-side writes are not allowed
    }
    
    // Career Updates - Real-Time Intel Engine (public read, Cloud Functions write)
    match /careerUpdates/{docId} {
      allow read: if true; // Public read access for demo
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Raw Fetches - authenticated users only
    match /rawFetches/{docId} {
      allow read: if request.auth != null;
      allow write: if false; // Only Cloud Functions can write
    }

    // Users can only read and write to their own document in the 'users' collection.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Career Activities - users can write their own activities
    match /careerActivities/{activityId} {
      allow read, write: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Career Graphs - users can read/write their own career graph
    match /careerGraphs/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reviews - public read, authenticated write (with AI moderation)
    match /reviews/{reviewId} {
      allow read: if true; // Public read access
      allow create: if request.auth != null && 
                      request.resource.data.author.uid == request.auth.uid;
      allow update: if request.auth != null;
      allow delete: if request.auth != null && resource.data.author.uid == request.auth.uid;
    }
    
    // Resources - public read, admin write (cached AI recommendations)
    match /resources/{resourceId} {
      allow read: if true; // Public read access
      allow write: if request.auth != null; // Authenticated users can cache
    }
    
    // Reddit Posts - public read, system write
    match /redditPosts/{postId} {
      allow read: if true; // Public read access
      allow write: if true; // Allow system to cache Reddit posts
    }
    
    // Scraped Courses - public read, system write
    match /scrapedCourses/{courseId} {
      allow read: if true; // Public read access
      allow write: if true; // Allow system to cache scraped courses
    }
    
    // Google Search Results - public read, system write
    match /googleSearchResults/{resultId} {
      allow read: if true; // Public read access
      allow write: if true; // Allow system to cache search results
    }
    
    // Mentors - public read, admin write
    match /mentors/{mentorId} {
      allow read: if true; // Public read access
      allow write: if request.auth != null; // Authenticated users can update profiles
    }
    
    // Chat Rooms - participants only
    match /chatRooms/{roomId} {
      allow read: if request.auth != null && 
                    (request.auth.uid == resource.data.studentId || 
                     request.auth.uid == resource.data.mentorId);
      allow create: if request.auth != null;
      allow update: if request.auth != null && 
                      (request.auth.uid == resource.data.studentId || 
                       request.auth.uid == resource.data.mentorId);
    }
    
    // Messages - chat room participants only
    match /messages/{messageId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && 
                      request.resource.data.senderId == request.auth.uid;
    }
    
    // Mentorship Sessions - participants only
    match /mentorshipSessions/{sessionId} {
      allow read: if request.auth != null && 
                    (request.auth.uid == resource.data.studentId || 
                     request.auth.uid == resource.data.mentorId);
      allow create: if request.auth != null && 
                      request.resource.data.studentId == request.auth.uid;
      allow update: if request.auth != null && 
                      (request.auth.uid == resource.data.studentId || 
                       request.auth.uid == resource.data.mentorId);
    }
    
    // Activities - user's own activities
    match /activities/{activityId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Event Reminders - user's own reminders
    match /eventReminders/{reminderId} {
      allow read, write: if request.auth != null;
    }
    
    // FCM Tokens - user's own tokens
    match /fcmTokens/{tokenId} {
      allow read, write: if request.auth != null;
    }
    
    // Cache collection - system caching
    match /cache/{cacheId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Colleges - public read
    match /colleges/{collegeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Career Updates - authenticated read, system write
    match /careerUpdates/{updateId} {
      allow read: if request.auth != null;
      allow write: if true; // Allow system to cache career updates
      
      // Subcollections under careerUpdates
      match /jobs/{jobId} {
        allow read: if request.auth != null;
        allow write: if true; // Allow system to write job data
      }
      
      match /skills/{skillId} {
        allow read: if request.auth != null;
        allow write: if true; // Allow system to write skill data
      }
      
      match /certifications/{certId} {
        allow read: if request.auth != null;
        allow write: if true; // Allow system to write certification data
      }
    }
    
    // Trending Skills - authenticated read, system write
    match /trendingSkills/{skillId} {
      allow read: if request.auth != null;
      allow write: if true; // Allow system to cache skill trends
    }
    
    // Certification Opportunities - authenticated read, system write
    match /certificationOpportunities/{certId} {
      allow read: if request.auth != null;
      allow write: if true; // Allow system to cache certifications
    }
    
    // Job Opportunities - authenticated read, system write
    match /jobOpportunities/{jobId} {
      allow read: if request.auth != null;
      allow write: if true; // Allow system to cache job postings
    }
  }
}
